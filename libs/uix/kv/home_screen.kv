    canvas:
        Color:                                                               
            rgba:(0,0,0,0.3)
        Line:
            width:2
            points: self.center_x,self.y,self.center_x,self.center_y
        Line:
            width:2
            points: self.x,self.center_y,self.center_x,self.center_y
