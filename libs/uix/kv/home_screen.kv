            width:2
            points:self.center_x,self.center_y+self.center_y,self.center_x,self.center_y
        Rectangle:                                                      
            id:root.rect_box                                          
            pos:(root.x1, root.y1)                                     
            size:(root.t_x - root.x1, root.t_y - root.y1)  

<CustomDropDown>:
    btn:btn.__self__
    dropdown:dropdown.__self__
    MDRectangleFlatIconButton:
        id: btn
        icon: "android"
        text: root.text
        theme_text_color: "Custom"
        text_color: 0, 0, 1, 1
        line_color: 1, 0, 1, 1
        icon_color: 1, 0, 0, 1
        on_release: dropdown.open(self)
        size_hint_y: None
        height:'48dp'
        size_hint_x: .8
    CustDropDown:
        id: dropdown
        on_select: root.text = '{}'.format(args[1])
        Button:
            text: 'First Item'
            size_hint_y: None
            height: '48dp'
            on_release: dropdown.select('First Item')
        Button:
            text: 'Third Item'
            size_hint_y: None
            height: '48dp'
            on_release: dropdown.select('Third Item')
