#:import utils kivy.utils
<RoundedButton@Button>:
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#BADDF6') if self.state=='normal' else utils.get_color_from_hex('#3dc2eb')  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]
<ButtonILike>:
    text_size: self.width-5, None
    size_hint: (1, None)
    height: self.texture_size[1] + 20
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#BADDF6') if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [2,]

